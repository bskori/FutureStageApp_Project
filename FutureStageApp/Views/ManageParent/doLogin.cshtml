@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/meanmenu.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/nice-select.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/boxicons.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/fonts/flaticon.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/magnific-popup.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/odometer.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/FrontendAssets/assets/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/animate.min.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/style.css">

    <link rel="stylesheet" href="~/FrontendAssets/assets/css/responsive.css">
    <title>Jecto - Job Board and Portal HTML Template</title>
    <link rel="icon" type="image/png" href="~/FrontendAssets/assets/img/favicon.png">
</head>
<body>

    <div class="loader">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="spinner"></div>
            </div>
        </div>
    </div>


    <div class="user-form-area">
        <div class="container-fluid p-0">
            <div class="row m-0 align-items-center">
                <div class="col-lg-6 p-0">
                    <div class="user-img">
                        <img src="~/FrontendAssets/assets/img/resgister-bg.jpg" alt="User">
                    </div>
                </div>
                <div class="col-lg-6 p-0">
                    <div class="user-content">
                        <div class="top">
                            <h2>Login</h2>
                            <form asp-action="doLogin" method="post">
                                <div class="form-group">
                                    <input type="email" asp-for="EmailID" class="form-control" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                                </div>
                                <button type="submit" class="btn">Login Here</button>
                            </form>
                            <div>
                                <br />
                                <span>Don't have an account? </span>
                                <a asp-action="Register" asp-controller="ManageParent">Sign up</a>
                            </div>
                        </div>
                        <div class="end">
                            <ul>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-facebook'></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-twitter'></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-linkedin'></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" target="_blank">
                                        <i class='bx bxl-pinterest-alt'></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/FrontendAssets/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/FrontendAssets/assets/js/popper.min.js"></script>
    <script src="~/FrontendAssets/assets/js/bootstrap.min.js"></script>

    <script src="~/FrontendAssets/assets/js/form-validator.min.js"></script>

    <script src="~/FrontendAssets/assets/js/contact-form-script.js"></script>

    <script src="~/FrontendAssets/assets/js/jquery.ajaxchimp.min.js"></script>

    <script src="~/FrontendAssets/assets/js/jquery.meanmenu.js"></script>

    <script src="~/FrontendAssets/assets/js/jquery.nice-select.min.js"></script>

    <script src="~/FrontendAssets/assets/js/jquery.mixitup.min.js"></script>

    <script src="~/FrontendAssets/assets/js/jquery.magnific-popup.min.js"></script>

    <script src="~/FrontendAssets/assets/js/odometer.min.js"></script>
    <script src="~/FrontendAssets/assets/js/jquery.appear.js"></script>

    <script src="~/FrontendAssets/assets/js/owl.carousel.min.js"></script>

    <script src="~/FrontendAssets/assets/js/progressbar.min.js"></script>

    <script src="~/FrontendAssets/assets/js/custom.js"></script>
</body>
</html>
