@model SiteAdmin

@{ Layout = null; }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>FutureStage Site Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <link rel="shortcut icon" type="image/x-icon" href="~/BackendAssets/assets/img/favicon.png">

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">

    <link rel="stylesheet" href="~/BackendAssets/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/BackendAssets/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/BackendAssets/assets/plugins/fontawesome/css/fontawesome.min.css">

    <link rel="stylesheet" href="~/BackendAssets/assets/css/style.css">
    <!--[if lt IE 9]>
            <script src="~/BackendAssets/assets/js/html5shiv.min.js"></script>
            <script src="~/BackendAssets/assets/js/respond.min.js"></script>
        <![endif]-->
</head>
<body>
    <div class="main-wrapper">
        <div class="account-page">
            <div class="container">
                <h3 class="account-title text-white">Site Admin Login</h3>
                <div class="account-box">
                    <div class="account-wrapper">
                        <div class="account-logo">
                            @*<a href="index.html">*@<img src="~/BackendAssets/assets/img/logo_new.png" alt="SchoolAdmin">@*</a>*@
                        </div>
                        <form asp-action="doLogin">
                            <div class="form-group">
                                <label>Username or Email</label>
                                <input asp-for="EmailID" class="form-control">
                                <span asp-validation-for="EmailID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center custom-mt-form-group">
                                <button type="submit" class="btn btn-primary btn-block account-btn">Login</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/BackendAssets/assets/js/jquery-3.6.0.min.js"></script>

    <script src="~/BackendAssets/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/BackendAssets/assets/js/jquery.slimscroll.js"></script>

    <script src="~/BackendAssets/assets/js/app.js"></script>
</body>
</html>


