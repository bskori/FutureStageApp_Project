@model Medium

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <br />
    <br />
    <h3 class="text-center alert-primary">Update Medium</h3>
    <br />


    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MediumID" />
                <div class="form-group">
                    <label asp-for="MediumTitle" class="control-label"></label>
                    <input asp-for="MediumTitle" class="form-control" />
                    <span asp-validation-for="MediumTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
