@model IEnumerable<FutureStageApp.Models.State>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
        
        <br />
        <br />
        <h3 class="alert-primary text-center">State List</h3>
    <br />
        <hr />
        <p>
            <a asp-action="Create" class="btn btn-success">Create New </a>
        </p>
    <div class="row">
        <table class="table table-striped table-hover">
            <tr class="thead-dark">
                <th>States</th>
                <th></th>
            </tr>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>@temp.StateName</td>
                    <td>
                    
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@temp.StateID">Edit</a>
                        |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.StateID">Delete</a>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>