                                <li><a asp-action="Index" asp-controller="Medium" area="SiteAdmin"><span>Medium</span></a></li>
                                <li><a asp-action="Index" asp-controller="Standard" area="SiteAdmin"><span>Standard</span></a></li>
                                <li><a asp-action="Index" asp-controller="Board" area="SiteAdmin"><span>Board</span></a></li>
                                <li><a asp-action="Index" asp-controller="Facility" area="SiteAdmin"><span>Facility</span></a></li>
                                <li><a asp-action="Index" asp-controller="Quota" area="SiteAdmin"><span>Quota</span></a></li>
                            </ul>
                        </li>
                        
                        
                    </ul>
                </div>
            </div>
        </div>


        <div class="page-wrapper">
            <div class="container">
                @RenderBody()
              
            </div>

    </div>


    <script src="~/BackendAssets/assets/js/jquery-3.6.0.min.js"></script>

    <script src="~/BackendAssets/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/BackendAssets/assets/js/jquery.slimscroll.js"></script>

    <script src="~/BackendAssets/assets/js/select2.min.js"></script>
    <script src="~/BackendAssets/assets/js/moment.min.js"></script>

    <script src="~/BackendAssets/assets/js/fullcalendar.min.js"></script>
