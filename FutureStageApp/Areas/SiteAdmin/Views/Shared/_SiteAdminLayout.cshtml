<body class="container-fluid">

    <div class="main-wrapper">

        <div class="header-outer">
            <div class="header">
                <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fas fa-bars" aria-hidden="true"></i></a>
                <a id="toggle_btn" class="float-left" href="javascript:void(0);">
                    <img src="~/BackendAssets/assets/img/sidebar/icon-21.png" alt="">
                </a>

                <ul class="nav float-left">
                    <li>
                        <div class="top-nav-search">
                            <a href="javascript:void(0);" class="responsive-search">
                                <i class="fa fa-search"></i>
                            </a>
                            <form action="search.html">
                                <input class="form-control" type="text" placeholder="Search here">
                                <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                    </li>
                    <li>
                        <a href="index.html" class="mobile-logo d-md-block d-lg-none d-block"><img src="~/BackendAssets/assets/img/logo1.png" alt="" width="30" height="30"></a>
                    </li>
                </ul>

                <ul class="nav user-menu float-right">
                    
                    
                    <li class="nav-item dropdown has-arrow">
                        <a href="#" class=" nav-link user-link" data-toggle="dropdown">
                            <span class="user-img">
                                <img class="rounded-circle" src="~/BackendAssets/assets/img/user-06.jpg" width="30" alt="Admin">
                                <span class="status online"></span>
                            </span>
                            <span>Admin</span>
                        </a>
                        <div class="dropdown-menu">
                           
                            <a class="dropdown-item" asp-action="LogOut" asp-controller="ManageSchool" asp-area="">Logout</a>
                        </div>
                    </li>
                </ul>
                <div class="dropdown mobile-user-menu float-right">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                      
                        <a class="dropdown-item" asp-action="LogOut" asp-controller="ManageSiteAdmin" asp-area="">Logout</a>

                    </div>
                </div>
            </div>
        </div>


        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <div class="header-left">
                        <a href="index.html" class="logo">
                            <img src="~/BackendAssets/assets/img/logo1.png" width="40" height="40" alt="">
                            <span class="text-uppercase">FutureStage</span>
                        </a>
                    </div>
                    <ul class="sidebar-ul">
                        <li class="menu-title">Menu</li>
                        <li class="active">
                            <a href="index.html"><img src="~/BackendAssets/assets/img/sidebar/icon-1.png" alt="icon"><span>Dashboard</span></a> 
                        </li>
                        <li class="submenu">
                            <a href="#"><img src="~/BackendAssets/assets/img/sidebar/icon-2.png" alt="icon"> <span>Config</span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled" style="display: none;">

                                <li><a asp-action="Index" asp-controller="State" area="SiteAdmin"><span>State</span></a></li>
                                <li><a asp-action="Index" asp-controller="City" area="SiteAdmin"><span>City</span></a></li>
                                <li><a asp-action="Index" asp-controller="Area" area="SiteAdmin"><span>Area</span></a></li>


                                <li><a href="about-teacher.html"><span>Payment Mode</span></a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#"> <img src="~/BackendAssets/assets/img/sidebar/icon-2.png" alt="icon"><span> App Config</span> <span class="menu-arrow"></span></a>
