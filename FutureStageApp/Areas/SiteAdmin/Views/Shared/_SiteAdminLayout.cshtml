    <script src="~/BackendAssets/assets/plugins/morris/morris.min.js"></script>
    <script src="~/BackendAssets/assets/plugins/raphael/raphael-min.js"></script>
    <script src="~/BackendAssets/assets/js/apexcharts.js"></script>
    <script src="~/BackendAssets/assets/js/chart-data.js"></script>

    <script src="~/BackendAssets/assets/js/app.js"></script>
