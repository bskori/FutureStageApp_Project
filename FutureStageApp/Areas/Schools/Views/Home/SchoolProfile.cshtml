@model School

@{
    ViewData["Title"] = "SchoolProfile";
}
<br />
<h3 class="text-center headr alert-primary" >School Profile</h3>

<br />

<a asp-action="EditRegister" asp-controller="Home" asp-route-id="@Model.SchoolID" class="btn btn-danger">Update School Profile</a>
<br />
<br />
<table class="table table-light">
    <tr>
        <th>School Name</th>
        <td>:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th> Address</th>
        <td>:</td>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th> Email Id</th>
        <td>:</td>
        <td>@Model.EmailID</td>
    </tr>
    <tr>
        <th> Contact No:</th>
        <td>:</td>
        <td>@Model.ContactNo</td>
    </tr>
    <tr>
        <th> Area</th>
        <td>:</td>
        <td>@Model.Area.AreaName</td>
    </tr>
    <tr>
        <th> Establishment Date</th>
        <td>:</td>
        <td>@Model.EstablishmentDate</td>
    </tr>
</table>

