@model IEnumerable<AddmissionEnquiry>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Enquiry</title>
</head>
<body>
    <br />
    <br />
    <h4 class="text-center header alert-primary">New Enquiry List</h4>
    <br />
    <table class="table table-borderless table-hover table-striped">
        <thead>
            <tr>
                <th>Sr. No</th>
                <th>School</th>
                <th>Parent Name</th>
                <th>Enquiry Description</th>
                <th>Enquiry Date</th>
                <th></th>
               
            </tr>
        </thead>
        @{ int srno = 1;}
        @foreach(var temp in Model)
            {
                <tbody>
                    <tr>
                        <td>@srno</td>
                        <td>@temp.School.Name</td>
                        <td>@temp.Parent.Name</td>
                        <td>@temp.EnquiryDescription</td>
                        <td>@temp.EnquiryDate</td>

                        @foreach (var temp2 in ViewBag.Remark)
                        {
                            @if (temp2 == false)
                            {
                                <td class="bg-primary text-white">Enquiry Confirmed</td>
                            }
                            else
                            {

                                <td>
                                    <a asp-action="ConfirmEnquiry" asp-controller="Enquiry" asp-route-id="@temp.AddmissionEnquiryID" class="btn btn-danger">Confirm Enquiry</a>
                                </td>
                            }
                        }
                    </tr>
                </tbody>
            srno++;
        }
    </table>
</body>
</html>
