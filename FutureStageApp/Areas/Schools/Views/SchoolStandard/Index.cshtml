@model IEnumerable<SchoolStandard>

<div class="row">
    <div class="col-md-12">
        <br />
        <br />
        <h1>school Standard List</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </p>
        <table class="table table-striped table-hover">
            <tr class="thead-dark">
                <th>Standard ID</th>
                <th>Standard Title</th>
                <th>Intake Capacity</th>
                <th></th>
            </tr>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>@temp.SchoolStandardID</td>
                    <td>@temp.Standard.StandardTitle</td>
                    <td>@temp.IntakeCapacity</td>
                    

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@temp.StandardID">Edit</a>

                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.StandardID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>




