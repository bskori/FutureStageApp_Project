@model IEnumerable<SchoolAchivement>

    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
            <h1>School Achivements List</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">Create</a>
            </p>
            <table class="table table-striped table-hover">
                <tr class="thead-dark">
                    <th>Acivement Title</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                @foreach(var temp in Model)
            {
                <tr>
                    <td>@temp.Title</td>
                    <td>@temp.SchoolAchivementDate.ToString("dd/MM/yyyy")</td>
                    <td>@temp.Desc</td>
                    
                    
                    <td>
                        <a class="btn btn-success"  asp-action="Edit" asp-route-id="@temp.SchoolAchivementID">Edit</a>
                     
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@temp.SchoolAchivementID">Delete</a>
                    </td>
                </tr>
            }
            </table>
        </div>
    </div>




